@model QuanLyKho.Models.TheLoaiSP

<h2>THÊM LOẠI SẢN PHẨM MỚI</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div>
                Tên Loại Sản Phẩm:
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenloaisp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenloaisp, "", new { @class = "text-danger" })
            </div>
        </div>

        <h1></h1>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-success" />
                @Html.ActionLink("Trở Về", "Index", null, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}

