@model QuanLyKho.Models.TheLoaiSP
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SỬA THÔNG TIN LOẠI SẢN PHẨM</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.maloaisp)

        <div class="form-group">
            <div>Tên Loại Sản Phẩm: </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenloaisp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenloaisp, "", new { @class = "text-danger" })
            </div>
        </div>

        <h1></h1>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-warning" />
                @Html.ActionLink("Trở Về", "Index", null, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}
